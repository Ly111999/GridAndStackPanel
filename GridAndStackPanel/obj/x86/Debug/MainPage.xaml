<Page
    x:Class="GridAndStackPanel.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GridAndStackPanel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <RelativePanel>
            <Button x:ConnectionId='7' Name="FoodButton" 
                    RelativePanel.AlignBottomWithPanel="True"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="36"
                    Content="&#xE700;"
                                            >
            </Button>

            <Button x:ConnectionId='8' Name="BackButton"
                    RelativePanel.RightOf="FoodButton"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="36"
                    Content="&#xE0C4;"
                                              >
            </Button>

            <TextBlock x:ConnectionId='9' Name="TitleText" 
                       RelativePanel.RightOf="BackButton"
                       FontSize="28"
                       FontWeight="Bold"
                       Margin="20, 5,0,0">
            </TextBlock>

            <Button x:ConnectionId='10' Name="SearchButton"
                    RelativePanel.AlignRightWithPanel="True"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="36"
                    Content="&#xE1A3;">
            </Button>

            <TextBox x:ConnectionId='11' Name="TbSearch"
                     RelativePanel.LeftOf="SearchButton"
                     Height="48"
                     Width="220"
                     FontSize="24"
                     PlaceholderText="Search">
            </TextBox>
        </RelativePanel>

        <SplitView x:ConnectionId='2' Grid.Row="1"
                   Name="MySplitView"
                   DisplayMode="CompactOverlay"
                   OpenPaneLength="220"
                   CompactPaneLength="55">

            <SplitView.Pane>
                <ListBox x:ConnectionId='3' SelectionMode="Single"
                                                                   >
                    <ListBoxItem x:ConnectionId='4' Name="Drink">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       FontSize="36"
                                       Text="&#xE80F;"/>
                            <TextBlock FontSize="36"
                                        Margin="20,0,0,0"
                                       Text="Drink"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='5' Name="Food">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       FontSize="36"
                                       Text="&#xE1CE;"/>
                            <TextBlock FontSize="36"
                                       Margin="20,0,0,0"
                                       Text="Food"/>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </SplitView.Pane>

            <SplitView.Content>
                <Frame x:ConnectionId='6' Name="MyFrame" BorderBrush="DarkGray" BorderThickness="1"></Frame>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>

